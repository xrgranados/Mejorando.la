		float left
		padding-bottom 5px
		position relative
		vertical-align top
		width 25%


		a 
			display block	
		p
			background rgba(0,0,0,.5)
			display inline
		h2
			background rgba(0,0,0,.5)
			display inline
		.block
			display block
			margin-top 5px
		.cap
			font-size 14px
