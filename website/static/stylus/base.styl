@-webkit-keyframes envivo
	to{-webkit-transform:translateX(0)}
	from{-webkit-transform:translateX(-1000px)}

@-moz-keyframes envivo
	to{-moz-transform:translateX(0)}
	from{-moz-transform:translateX(-1000px)}

#envivo .patron
	-webkit-animation 25s envivo infinite linear
	-moz-animation 25s envivo infinite linear
	background url("../images/patron.jpg") repeat-x
	width 2000px
	height 60px
	position relative
	z-index 1

#envivo .vivo
	position absolute
	right 0
	top 0
	display block
	z-index 2

@media screen and (max-width:1000px)
	
	#wrapper
		width auto

@media screen and (max-width:800px)

	header
		height 87px
		h1 
			a 
				img 
					height 42px
					width auto
		
		.mejor 
			width auto
	

	
	.menu 
		top 42px

		ul 
			min-width 320px
			padding-top 0
			text-align center
			li 
				box-sizing border-box
				width auto
				&:nth-child(even)
					background none 
					border-left 1px solid white 
					border-right 1px solid white
				a 
					height 44px 
					line-height 44px


@media screen and (max-width:480px)
	.menu 
		ul  li a 
			padding 0 5px	
			font-size 12px

