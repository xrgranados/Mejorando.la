body
	background #3C4043
footer
	padding-top 0

#archivo
	position relative
	float right
	text-align right
#anteriores
	background none
	margin-bottom 160px
	text-align center
	.capitulo:nth-child(1) 
		margin-right 30px 
		margin-left 600px 
		display block
	
	.capitulo:nth-child(2) 
		display block
		margin-left 352px 
	
	.capitulo:nth-child(3)
	.capitulo:nth-child(6)
	.capitulo:nth-child(9)
	.capitulo:nth-child(12)
	.capitulo:nth-child(15) 
		float right
		margin-right 30px 
	
	.capitulo:nth-child(4)
	.capitulo:nth-child(7)
	.capitulo:nth-child(10)
	.capitulo:nth-child(13)
	.capitulo:nth-child(16) 
		float right
		margin-right 16px
	
	.capitulo:nth-child(5)
	.capitulo:nth-child(8)
	.capitulo:nth-child(11)
	.capitulo:nth-child(14)
	.capitulo:nth-child(17) 
		display block
		margin-left 352px 
		clear both
	
	.art1
		margin-right 30px
	.art2
		margin-left 30px
		margin-right 60px
	.capitulo
		border none
		height 167px
		width 480px
		.block
			margin-top 5px
		.cintaver
			background url(../images/archivo/deco_video.png)
			display inline-block
			height 167px
			margin-right 2px
			width 16px
		h2
			font-size 20px
		.imagen
			img 
				height 167px
				width 230px
				box-shadow none !important
		a
			height 167px
			width 230px
			display inline-block
			*display inline
			vertical-align top
			zoom 1
		.desc
			background none
			color #ddd
			display inline-block
			font-size 12.5px
			line-height 16.5px
			margin  0 15px 55px 0
			text-align right
			text-transform none
			vertical-align bottom
			width 189px
			zoom 1
		.texto 
			padding: 20px 5px 0 10px;


#cuerpo
	background  #3C4043
	box-shadow 0 0 150px rgba(0,0,0,0.80) inset
	overflow hidden
	padding-top 180px

.mes
	background url(../images/archivo/deco_headline.png) no-repeat right 0;
	margin-bottom 25px
	h5
		display inline-block
		font-size 112px
		height 112px
		margin-top -15px
		margin-right 20px
		text-align right
		text-transform uppercase	
		font-weight normal	
	span
		font-size 20px
		letter-spacing -2px
		margin-right 15px
		margin-top 20px
		vertical-align top
@media screen and (max-width:1000px)
	#anteriores 
		height auto
@media screen and (max-width:800px)
	#archivo
		width 100%
	#anteriores
		height auto
		.capitulo
			margin 20px 0 !important
			float right
	#cuerpo
		padding-top 20px
	.mes
		h5 
			height 50px
			font-size 50px 
			font-weight bold


@media screen and (max-width:480px)
	#anteriores
		text-align right
		.capitulo
			width auto
			height auto
			padding 0 10px
			.desc
				margin 10px 0
				width auto 
				display block
			.texto 
				top auto 
				bottom 80px
