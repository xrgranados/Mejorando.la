azul = #0670dd
@import "classes.styl"
body
	background #a6adb5
	color #555a5e
a 
	color #555a5e
	text-decoration none
	
	&:hover 
		text-decoration none
#cuerpo
	#azul 
		background #0670dd
	#portada
		background url("../images/hola/portada.jpg") no-repeat top center
		position relative
		height 230px 
		#titulo
			background rgba(black,.7)
			bottom 0
			box-sizing border-box
			color white
			font-size 40px
			font-weight normal
			left 0
			line-height 40px
			padding 20px 25px
			position absolute 
			text-align right
			text-transform uppercase
			width 100%
	#subtext
		padding-bottom 20px
		#texto 
			color #555a5e
			font-family Arial
			line-height 22px
			margin 0 auto
			max-width 850px 
			padding 20px 0
			text-align center

	#items
		text-align center
		font-size 0
		//max-width 900px
		margin 0 auto 70px auto
		.item 
			display inline-block
			font-size 16px
			width 25%
			vertical-align top
			h3 
				color white
				margin-bottom 10px
			img 
				margin-bottom 10px

			.footer
				background white url("../images/hola/shape.png") no-repeat top center
				padding 20px
				font-size 14px
				font-family Arial
				line-height 17px
			&:hover img
				animation-duration .3s 
				animation-name item 
				animation-iteration-count 5
				
@keyframes item
	
	50%
		transform translateY(10px)
	100%
		transform translateY(0)
	
#email
	position relative
	z-index 2
#formulario
	background #0073E8 url("../images/hola/pattern_btn_post.png")
	color #0073e8
	margin 0 auto 40px auto
	max-width 880px
	padding-bottom 20px
	text-align center
	label 
		display block
		color white
		font-weight bold
	input 
		display block
		margin 5px 0
		font-family Arial
		-webkit-box-sizing border-box
	input[type="text"]
		position absolute
		right 0 
		top 0
		
	input[type="text"],
	input[type="email"]
		border 3px solid rgba(azul,.5)
		padding 10px 5px
		border-radius 3px
		font-size 16px
		width 100%
		max-width 740px
		display inline-block
		outline 0
		box-sizing border-box
		&:focus
			border-color #fe9c13
	input[type="submit"]
		background #fe9c13
		border 3px solid white
		border-radius 2px 
		color white
		cursor pointer
		display inline-block
		font-size 17px
		font-weight bold
		margin  0 auto
		padding 12px 40px 
		position relative
		text-transform uppercase
		margin-top -30px
		margin-bottom 5px
	#inputs 
		position relative
		max-width 740px
		text-align left 
		margin 5px auto 0
		
@media screen and (max-width:740px)
	footer
		.centro
			span 
				margin 0 10px
	#cuerpo
		#azul
			background white
		#items
			.item
				width 100%
				@extends .clearfix
				.footer
					background none
					padding 20px 10px
					padding-left 150px
					text-align left
				.header 
					float left
					background azul
					padding 10px
					width 120px
		#portada
			#titulo
				font-size 20px 
				line-height 25px
	#formulario
		input[type="text"],
		input[type="email"]
			display block
			margin 10px auto
			max-width 95% !important
			position static
